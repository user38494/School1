<Page x:Class="School1.aut"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="aut">

    <Grid>
        <StackPanel Orientation="Vertical" Width="300">
            <TextBlock Text="Введите логин" FontWeight="Bold" Grid.Row="0" Margin="0 10"/>
            <TextBox Name="Login" Height="30" Background="#d4d0d6"></TextBox>
            <TextBlock Text="Введите пароль" FontWeight="Bold" Margin="0 5" Grid.Row="1"/>
            <PasswordBox Name="Password" Height="30" Background="#d4d0d6"></PasswordBox>
            <Button Click="Button_Click" Content="Вход" FontWeight="Bold" Margin="0 10" Background="#9463d0" Height="30"></Button>
            <Button Click="Button_Click_1" Content="Регистрация" FontWeight="Bold" Background="#9463d0" Height="30"></Button>
        </StackPanel>
    </Grid>
</Page>
