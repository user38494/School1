<Window x:Class="School1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="344"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Text="Школа" FontWeight="UltraBlack" VerticalAlignment="Center" FontFamily="Courier New"/>
        <Image Source="C:\main.png" Grid.Row="0" HorizontalAlignment="Left" Margin="1"/>
        <Grid Panel.ZIndex="-2" Background="#9463d0"/>
        <Grid Grid.Row="2" Background="#9463d0"/>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Name="MainFrame"/>
        <Button HorizontalAlignment="Right" Content="Назад" FontWeight="Bold" Height="30" Width="75" Click="Button_Click_1" Background="SkyBlue"></Button>
    </Grid>
</Window>
