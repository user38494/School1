<Page x:Class="School1.reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="reg">

    <Grid>
        <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Введите логин" FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Center" Margin="0 5"/>
                <TextBox Name="Login" Height="30" Width="300" Background="#d4d0d6"></TextBox>
                <TextBlock Text="Введите пароль!" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center"  Margin="0 5"/>
                <PasswordBox Name="Password" Height="30" Width="300" Margin="10" Background="#d4d0d6"></PasswordBox>
                <Button Click="Button_Click" Content="Зарегистрироваться" Background="#9463d0" Margin="15" Height="30" Width="300"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
